@page
@model UploadPlayersModel
@{
    ViewData["Title"] = "Upload Players";
}

<div class="mx-auto max-w-5xl px-4 py-10">
    <h1 class="text-3xl font-semibold tracking-tight text-slate-100">@ViewData["Title"]</h1>

    <!-- Status / TempData Messages -->
    <div class="mt-6 space-y-3">
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="rounded-lg border border-yellow-400/30 bg-yellow-400/10 px-4 py-3 text-sm text-yellow-200">@Model.StatusMessage</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="rounded-lg border border-emerald-500/30 bg-emerald-500/10 px-4 py-3 text-sm text-emerald-300">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="rounded-lg border border-amber-500/30 bg-amber-500/10 px-4 py-3 text-sm text-amber-300">@TempData["WarningMessage"]</div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="rounded-lg border border-sky-500/30 bg-sky-500/10 px-4 py-3 text-sm text-sky-300">@TempData["InfoMessage"]</div>
        }
    </div>

    @if (Model.HasExistingData)
    {
        <div class="mt-8 rounded-xl border border-sky-400/30 bg-sky-400/10 p-6">
            <h2 class="text-lg font-medium text-slate-100 mb-2">Existing data</h2>
            <p class="text-sm text-slate-300 mb-4">You already have <span class="font-semibold text-slate-100">@Model.ExistingPlayerCount</span> players uploaded.</p>
            <div class="flex flex-wrap gap-3">
                <form method="post" asp-page-handler="ClearData" onsubmit="return confirm('Are you sure you want to clear existing player data?')">
                    <button type="submit" class="inline-flex items-center rounded-md bg-amber-500/90 px-4 py-2 text-sm font-medium text-white shadow hover:bg-amber-400 focus:outline-none focus:ring-2 focus:ring-amber-300">Clear data</button>
                </form>
                <a asp-page="/DisplayPlayers" class="inline-flex items-center rounded-md bg-primary-500 px-4 py-2 text-sm font-medium text-white shadow hover:bg-primary-400 focus:outline-none focus:ring-2 focus:ring-primary-300">View existing players</a>
            </div>
        </div>
    }

    <div class="mt-10 grid gap-10 md:grid-cols-3">
        <!-- Upload Form -->
        <div class="md:col-span-2">
            <form method="post" enctype="multipart/form-data" asp-page-handler="Upload" class="space-y-6 rounded-2xl border border-white/10 bg-white/5 p-8 shadow backdrop-blur">
                <div>
                    <label asp-for="UploadedFile" class="mb-2 block text-sm font-medium text-slate-200">Select HTML file with player data</label>
                    <input asp-for="UploadedFile" type="file" accept=".html" class="block w-full cursor-pointer rounded-md border border-white/10 bg-white/10 text-sm text-slate-200 file:mr-4 file:cursor-pointer file:rounded file:border-0 file:bg-primary-500 file:px-4 file:py-2 file:text-sm file:font-semibold file:text-white hover:file:bg-primary-400 focus:outline-none focus:ring-2 focus:ring-primary-400/50" />
                    <p class="mt-2 text-xs text-slate-400">Upload an HTML file exported from Football Manager 2024.</p>
                </div>
                <button type="submit" class="inline-flex items-center gap-2 rounded-md bg-primary-500 px-6 py-3 text-sm font-semibold text-white shadow hover:bg-primary-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-300 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5"><path fill-rule="evenodd" d="M3 3a1 1 0 011-1h4a1 1 0 010 2H5v12h10V4h-3a1 1 0 110-2h4a1 1 0 011 1v14a1 1 0 01-1 1H4a1 1 0 01-1-1V3zm5.293 3.293a1 1 0 011.414 0L11 7.586V2a1 1 0 112 0v5.586l1.293-1.293a1 1 0 111.414 1.414l-3.999 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                    Upload & Analyze
                </button>
            </form>
        </div>

        <!-- Instructions -->
        <div>
            <div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow backdrop-blur">
                <h3 class="mb-4 text-sm font-semibold uppercase tracking-wide text-slate-300">Instructions</h3>
                <ol class="space-y-3 text-sm text-slate-300 list-decimal list-inside">
                    <li>Export player data from FM24 as HTML</li>
                    <li>Upload the file here</li>
                    <li>Application analyzes all players</li>
                    <li>View results and role scores</li>
                </ol>
            </div>
        </div>
    </div>
</div>
