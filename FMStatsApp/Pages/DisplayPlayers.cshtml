@page
@using FMStatsApp.Models
@model DisplayPlayersModel
@{
    ViewData["Title"] = "Visa spelare";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (!Model.Players.Any())
    {
        <div class="alert alert-info">
            <h5>Inga spelare hittades</h5>
            <p>Ladda upp en HTML-fil med speldata för att komma igång.</p>
            <a asp-page="/UploadPlayers" class="btn btn-primary">Ladda upp spelare</a>
        </div>
    }
    else
    {
        <!-- Filter Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Filter och inställningar</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="Filter">
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="Filter.Position" class="form-label">Position</label>
                            <select asp-for="Filter.Position" class="form-select">
                                <option value="">Alla positioner</option>
                                @foreach (var position in Model.AvailablePositions)
                                {
                                    <option value="@position">@position</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Filter.Nationality" class="form-label">Nationalitet</label>
                            <select asp-for="Filter.Nationality" class="form-select">
                                <option value="">Alla nationaliteter</option>
                                @foreach (var nationality in Model.AvailableNationalities)
                                {
                                    <option value="@nationality">@nationality</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Filter.MinAge" class="form-label">Min ålder</label>
                            <input asp-for="Filter.MinAge" class="form-control" type="number" min="15" max="50" />
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Filter.MaxAge" class="form-label">Max ålder</label>
                            <input asp-for="Filter.MaxAge" class="form-control" type="number" min="15" max="50" />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary">Filtrera</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Role Selection Section -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Välj roller att visa</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="ShowRoleScores">
                    <div class="accordion" id="roleAccordion">
                        <!-- Goalkeeper Roles -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="goalkeepersHeading">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#goalkeepersCollapse" aria-expanded="false" aria-controls="goalkeepersCollapse">
                                    Målvaktsroller (@Model.GoalkeeperRoles.Count)
                                </button>
                            </h2>
                            <div id="goalkeepersCollapse" class="accordion-collapse collapse" aria-labelledby="goalkeepersHeading" data-bs-parent="#roleAccordion">
                                <div class="accordion-body">
                                    <div class="d-flex flex-wrap">
                                        @foreach (var role in Model.GoalkeeperRoles)
                                        {
                                            <div class="form-check me-3 mb-2">
                                                <input type="checkbox" class="form-check-input" id="gk_@role" name="SelectedRoles" value="@role" checked="@(Model.SelectedRoles.Contains(role))">
                                                <label class="form-check-label" for="gk_@role">@role</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Defender Roles -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="defendersHeading">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#defendersCollapse" aria-expanded="false" aria-controls="defendersCollapse">
                                    Försvarsroller (@Model.DefenderRoles.Count)
                                </button>
                            </h2>
                            <div id="defendersCollapse" class="accordion-collapse collapse" aria-labelledby="defendersHeading" data-bs-parent="#roleAccordion">
                                <div class="accordion-body">
                                    <div class="d-flex flex-wrap">
                                        @foreach (var role in Model.DefenderRoles)
                                        {
                                            <div class="form-check me-3 mb-2">
                                                <input type="checkbox" class="form-check-input" id="def_@role" name="SelectedRoles" value="@role" checked="@(Model.SelectedRoles.Contains(role))">
                                                <label class="form-check-label" for="def_@role">@role</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Midfielder Roles -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="midfieldersHeading">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#midfieldersCollapse" aria-expanded="false" aria-controls="midfieldersCollapse">
                                    Mittfältsroller (@Model.MidfielderRoles.Count)
                                </button>
                            </h2>
                            <div id="midfieldersCollapse" class="accordion-collapse collapse" aria-labelledby="midfieldersHeading" data-bs-parent="#roleAccordion">
                                <div class="accordion-body">
                                    <div class="d-flex flex-wrap">
                                        @foreach (var role in Model.MidfielderRoles)
                                        {
                                            <div class="form-check me-3 mb-2">
                                                <input type="checkbox" class="form-check-input" id="mid_@role" name="SelectedRoles" value="@role" checked="@(Model.SelectedRoles.Contains(role))">
                                                <label class="form-check-label" for="mid_@role">@role</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Forward Roles -->
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="forwardsHeading">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#forwardsCollapse" aria-expanded="false" aria-controls="forwardsCollapse">
                                    Anfallsroller (@Model.ForwardRoles.Count)
                                </button>
                            </h2>
                            <div id="forwardsCollapse" class="accordion-collapse collapse" aria-labelledby="forwardsHeading" data-bs-parent="#roleAccordion">
                                <div class="accordion-body">
                                    <div class="d-flex flex-wrap">
                                        @foreach (var role in Model.ForwardRoles)
                                        {
                                            <div class="form-check me-3 mb-2">
                                                <input type="checkbox" class="form-check-input" id="fwd_@role" name="SelectedRoles" value="@role" checked="@(Model.SelectedRoles.Contains(role))">
                                                <label class="form-check-label" for="fwd_@role">@role</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-success">Visa valda roller</button>
                        <a asp-page="/UploadPlayers" class="btn btn-secondary">Ladda upp nya spelare</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Players Table -->
        @if (Model.Players.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5>Spelare (@Model.Players.Count)</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Namn</th>
                                    <th>Ålder</th>
                                    <th>Position</th>
                                    <th>Nationalitet</th>
                                    <th>Klubb</th>
                                    @foreach (var selectedRole in Model.SelectedRoles)
                                    {
                                        <th>@selectedRole</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var player in Model.Players)
                                {
                                    <tr>
                                        <td><strong>@player.Name</strong></td>
                                        <td>@player.Age</td>
                                        <td><span class="badge bg-primary">@player.Position</span></td>
                                        <td>@player.Nationality</td>
                                        <td>@player.Club</td>
                                        @foreach (var selectedRole in Model.SelectedRoles)
                                        {
                                            var roleData = player.Roles.FirstOrDefault(r => r.Name == selectedRole || r.RoleName == selectedRole);
                                            <td>
                                                @if (roleData != null)
                                                {
                                                    var score = roleData.RoleScore > 0 ? roleData.RoleScore : roleData.Score;
                                                    var badgeClass = score >= 15 ? "bg-success" : score >= 12 ? "bg-warning" : "bg-danger";
                                                    <span class="badge @badgeClass">@score.ToString("F1")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">N/A</span>
                                                }
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        // Auto-expand accordion sections with selected roles
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('input[name="SelectedRoles"]:checked');
            checkboxes.forEach(function(checkbox) {
                const accordion = checkbox.closest('.accordion-collapse');
                if (accordion) {
                    accordion.classList.add('show');
                    const button = accordion.previousElementSibling.querySelector('.accordion-button');
                    if (button) {
                        button.classList.remove('collapsed');
                        button.setAttribute('aria-expanded', 'true');
                    }
                }
            });
        });
    </script>
}