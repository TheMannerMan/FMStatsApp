@page "/upload"
@model IndexModel
@{
    ViewData["Title"] = "Upload Players";
}

@section Head { }

<div class="relative isolate overflow-hidden rounded-3xl border border-white/10 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 shadow-xl ring-1 ring-white/10">
    <div class="mx-auto max-w-7xl px-6 py-20 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
            <h1 class="text-4xl font-bold tracking-tight sm:text-5xl bg-clip-text text-transparent bg-gradient-to-r from-primary-400 to-blue-300">FM Stats Analyzer</h1>
            <p class="mt-6 text-lg leading-8 text-gray-300">Upload your exported Football Manager HTML table and instantly get role fit scoring and attribute insights.</p>
        </div>
        <div class="mx-auto mt-14 max-w-2xl">
            <div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur p-8 shadow-lg">
                <form method="post" enctype="multipart/form-data" asp-page="/UploadPlayers" asp-page-handler="Upload" class="space-y-6" id="landing-upload-form">
                    <div>
                        <label for="UploadedFile" class="block text-sm font-medium text-gray-200 mb-2">Select HTML file</label>
                        <input id="UploadedFile" name="UploadedFile" type="file" accept=".html" required
                               class="block w-full cursor-pointer rounded-md border border-white/10 bg-white/10 text-sm text-gray-200 file:mr-4 file:rounded file:border-0 file:bg-primary-500 file:px-4 file:py-2 file:text-sm file:font-semibold file:text-white hover:file:bg-primary-400 focus:outline-none focus:ring-2 focus:ring-primary-400/50" />
                        <p class="mt-2 text-xs text-gray-400">Export a player list from Football Manager (HTML) and upload it here.</p>
                    </div>
                    <div class="flex items-center gap-4">
                        <button type="submit" class="inline-flex items-center gap-2 rounded-md bg-primary-500 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-primary-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-300 transition">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5"><path fill-rule="evenodd" d="M3 3a1 1 0 011-1h4a1 1 0 010 2H5v12h10V4h-3a1 1 0 110-2h4a1 1 0 011 1v14a1 1 0 01-1 1H4a1 1 0 01-1-1V3zm5.293 3.293a1 1 0 011.414 0L11 7.586V2a1 1 0 112 0v5.586l1.293-1.293a1 1 0 111.414 1.414l-3.999 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                            Upload & Analyze
                        </button>
                        <a asp-page="/UploadPlayers" class="text-sm text-gray-400 hover:text-gray-200 transition">Advanced upload →</a>
                    </div>
                </form>
                <div class="mt-10 grid gap-6 md:grid-cols-3 text-sm text-gray-300">
                    <div class="flex items-start gap-3">
                        <div class="rounded-md bg-primary-500/20 p-2 text-primary-300 ring-1 ring-inset ring-primary-400/30">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>
                        </div>
                        <p><span class="font-semibold text-gray-200">Automatic role scoring</span><br/>Calculates suitability across defined roles.</p>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="rounded-md bg-primary-500/20 p-2 text-primary-300 ring-1 ring-inset ring-primary-400/30">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25A2.25 2.25 0 0 1 8.25 10.5H6A2.25 2.25 0 0 1 3.75 8.25V6ZM13.5 6A2.25 2.25 0 0 1 15.75 3.75H18a2.25 2.25 0 0 1 2.25 2.25v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 8.25 20.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 15.75A2.25 2.25 0 0 1 15.75 13.5H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" /></svg>
                        </div>
                        <p><span class="font-semibold text-gray-200">Filtering & compare</span><br/>Explore and compare players in detailed view.</p>
                    </div>
                    <div class="flex items-start gap-3">
                        <div class="rounded-md bg-primary-500/20 p-2 text-primary-300 ring-1 ring-inset ring-primary-400/30">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 12h.007v.008H3.75V12Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0ZM3.75 17.25h.007v.008H3.75v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" /></svg>
                        </div>
                        <p><span class="font-semibold text-gray-200">Clear flow</span><br/>From upload to insight in seconds.</p>
                    </div>
                </div>
            </div>
            <div class="mt-14 text-center text-xs text-gray-500">Your file is processed in-session only. No external storage.</div>
        </div>
    </div>
</div>

